<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bookmebus.bookmebus" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BookMeBus</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="DisallowOverscroll" value="true" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <icon src="www/img/app_icon/icon.png" />

    <platform name="android">
        <allow-intent href="market:*" />

        <icon src="www/img/app_icon/Icon-ldpi.png" density="ldpi" />
        <icon src="www/img/app_icon/Icon-mdpi.png" density="mdpi" />
        <icon src="www/img/app_icon/Icon-hdpi.png" density="hdpi" />
        <icon src="www/img/app_icon/Icon-xhdpi.png" density="xhdpi" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/app_icon/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/app_icon/Icon-60.png" width="60" height="60" />
        <icon src="www/img/app_icon/Icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/app_icon/Icon-76.png" width="76" height="76" />
        <icon src="www/img/app_icon/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/img/app_icon/Icon-40.png" width="40" height="40" />
        <icon src="www/img/app_icon/Icon-40@2x.png" width="80" height="80" />
        <icon src="www/img/app_icon/Icon-40@3x.png" width="120" height="120" />

        <!-- iPad -->
        <icon src="www/img/app_icon/Icon-72.png" width="72" height="72" />
        <icon src="www/img/app_icon/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->

        <icon src="www/img/app_icon/Icon-Small.png" width="29" height="29" />
        <icon src="www/img/app_icon/Icon-Small@2x.png" width="58" height="58" />
        <icon src="www/img/app_icon/Icon-Small@3x.png" width="87" height="87" />

        <icon src="www/img/app_icon/Icon-Small-40.png" width="40" height="40" />
        <icon src="www/img/app_icon/Icon-Small-40@2x.png" width="80" height="80" />
        <icon src="www/img/app_icon/Icon-Small-40@3x.png" width="120" height="120" />

        <icon src="www/img/app_icon/Icon-Small-50.png" width="50" height="50" />
        <icon src="www/img/app_icon/Icon-Small-50@2x.png" width="100" height="100" />


    </platform>
</widget>

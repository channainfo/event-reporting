<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bookmebus.bookmebus" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BookMeBus</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="DisallowOverscroll" value="true" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        
        <icon src="www/img/app_icon/android/res/drawable-ldpi/Icon.png" density="ldpi" />
        <icon src="www/img/app_icon/android/res/drawable-mdpi/Icon.png" density="mdpi" />
        <icon src="www/img/app_icon/android/res/drawable-hdpi/Icon.png" density="hdpi" />
        <icon src="www/img/app_icon/android/res/drawable-xdpi/Icon.png" density="xhdpi" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon src="www/img/app_icon/ios/icon/Icon.png" />
        <icon src="www/img/app_icon/ios/icon/Icon@2x.png"/>

    </platform>
</widget>
